# set timezone
TZ='Europe/Vienna'

# set default editor
EDITOR='emacs -nw'

# maven
M2_HOME=/opt/maven
MAVEN_OPTS="-XX:+TieredCompilation -XX:TieredStopAtLevel=1"


if [ -d "/sbin" ]; then
   PATH="/sbin:$PATH"
fi

if [ -d "/usr/sbin" ]; then
   PATH="/usr/sbin:$PATH"
fi

if [ -d "/usr/local/sbin" ]; then
   PATH="/usr/sbin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ]; then
    PATH="$HOME/bin:$PATH"
fi

if [ -d "/usr/lib/jvm/default-java" ]; then
	export JAVA_HOME=/usr/lib/jvm/default-java
fi
